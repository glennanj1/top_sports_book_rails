<h1 class="pb-2 py-2 border-bottom text-center">All Articles</h1>

<div class="card mb-3">
  <% @articles.each do |a| %>
  <img class="card-img-top" src='<%=a.url_to_image%>' alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title"><%= a.title %></h5>
    <p class="card-text"><%= a.description %></p>
    <p class="card-text"><small class="text-muted">Last Updated:<%= a.created_at %></small></p>
  </div>
  <% end %><br>
</div>


