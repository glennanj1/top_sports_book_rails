<%= render 'errors' %>
<h1 class> New Bet </h1> 
<%= form_for(@bet, url: "/odds/#{@bet.odd.id}/bets") do |f| %>
    <%= f.label(:amount) %> 
    <%= f.number_field :amount %><br> 
    
    <%= f.label(:team) %>
    <%= f.text_field :team %><br>
    <%= f.label(:odds) %>
    <%= f.select(:odds, @selection) %><br>

    <%= f.hidden_field :odd_id %>

    <%= f.submit %> 
<% end %>
<%= render 'sites' %>


