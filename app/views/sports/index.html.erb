<div class="container-left">
  <h1 class="pb-2 py-2 border-bottom text-center">Leagues</h1>
  <p></p>            
  <table class="table table-light table-hover">
    <thead>
      <tr>
        <th>Sport</th>
        <th>Details</th>
        <th>Group</th>
      </tr>
    </thead>
    <tbody>
      <% @sports.each do |s| %>
      <tr>
        <td><%= link_to s.title, [s, :odds] %></td>
        <td><%= s.details %></td>
        <td><%= s.group %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>